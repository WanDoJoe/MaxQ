<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_expand_root_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/product_expand_rood_item_cb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/product_cb_check_bg"
        android:button="@null"
        android:clickable="false"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/product_expand_root_item_type"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="sssss"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/product_expand_root_item_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="sssss"
            android:visibility="gone"
            android:textColor="@color/actionbarandstatusbar_gray50"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/actionbarandstatusbar_gray50" />
    </LinearLayout>

    <ImageView
        android:id="@+id/product_expand_root_item_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/s_jr_ico"
        android:visibility="gone" />

</FrameLayout>