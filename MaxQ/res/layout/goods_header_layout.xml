<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/goods_expand_viewpage_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp" >

            <android.support.v4.view.ViewPager
                android:id="@+id/goods_header_viewpage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tum" >
            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:id="@+id/goods_header_viewpage_icon_ll"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:background="#0ccfcfcf"
                android:orientation="horizontal" >
            </LinearLayout>
        </FrameLayout>

        <GridView
            android:id="@+id/goods_header_girdview"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/actionbarandstatusbar_gray50"
            android:numColumns="4" >
        </GridView>

        <LinearLayout
            android:id="@+id/goods_expand_layout_ll1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/actionbarandstatusbar_gray50"
            android:orientation="horizontal"
            android:padding="1dp" >

            <ImageView
                android:id="@+id/goods_expand_layout_ll1_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:scaleType="fitXY"
                android:src="@drawable/goods1" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/actionbarandstatusbar_gray50" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/goods_expand_layout_ll1_righttop1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/goods2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/actionbarandstatusbar_gray50" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/goods_expand_layout_ll1_rightbottom1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/goods3" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/actionbarandstatusbar_gray50"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/goods_expand_layout_ll1_rightbottom2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/goods4"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>