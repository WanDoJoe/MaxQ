<?xml version="1.0" encoding="utf-8"?>
<in.srain.cube.views.ptr.PtrClassicFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/store_house_ptr_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/index_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cccccc"
        tools:ignore="MergeRootFrame" >

        <android.support.v4.view.ViewPager
            android:id="@+id/index_header_vp"
            android:layout_width="match_parent"
            android:layout_height="220dp" >
        </android.support.v4.view.ViewPager>

        <GridView
            android:id="@+id/index_header_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </GridView>

        <com.utils.widget.grid.StaggeredGridView
            android:id="@+id/index_exp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/index_header_gv"
            android:paddingTop="2dp" >
        </com.utils.widget.grid.StaggeredGridView>
    </RelativeLayout>

</in.srain.cube.views.ptr.PtrClassicFrameLayout>