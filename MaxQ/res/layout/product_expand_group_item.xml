<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/product_expand_group_item_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:paddingBottom="8dp"
            android:text="sssss"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_12" />

        <ImageView
            android:id="@+id/product_expand_group_item_txt_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:src="@drawable/s_jr_ico" />

        <TextView
            android:id="@+id/product_expand_group_item_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/actionbarandstatusbar_gray50"
            android:textSize="13sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/product_expand_group_item_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/product_isexpand"
        android:visibility="gone" />

</RelativeLayout>